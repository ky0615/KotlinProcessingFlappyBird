{
  "apps": [
    {
      "name": "Quizzly Server",
      "cwd": ".",
      "args": [
        "gradlew",
        "run"
      ],
      "env": {
        "QUIZZLY_ENV": "development"
      },
      "env_production": {
        "QUIZZLY_ENV": "production"
      },
      "script": "bash",
      "node_args": [],
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "exec_interpreter": "none",
      "exec_mode": "fork"
    }
  ],

  "deploy" : {
    "production" : {
      "user" : "http",
      "host" : "quizzly.linux.moe",
      "ref"  : "origin/master",
      "repo" : "git@github.com:ky0615/quizzly_server.git",
      "path" : "/home/http/deploy/quizzly/server",
      "post-deploy" : ". ~/.profile && pm2 startOrRestart processes.json --env production"
    }
  }
}